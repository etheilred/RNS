<Window x:Class="RNSFrontend.ModuleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RNSFrontend"
        mc:Ignorable="d"
        Title="ModuleDialog" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Введите основания СОК" Grid.Row="0" HorizontalAlignment="Left"></Label>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" FontSize="20" Name="tb"></TextBox>
            <Button Grid.Column="1" 
                    Content="Set" 
                    HorizontalAlignment="Stretch"
                    FontSize="20"
                    Click="SetModules"></Button>
        </Grid>
    </Grid>
</Window>
